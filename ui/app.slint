
component WeatherPanel inherits VerticalLayout {
	in property <string> time;
	in property <image> icon;
	in property <int> temperature;
	in property <int> precipitation-propability;

	in property <brush> background: #000000AA;
	in property <length> size;

	alignment: start;

	Rectangle {
		background: root.background;
		HorizontalLayout {
			alignment: space-between;
			spacing: 10px;

			padding-top: 2px;
			padding-bottom: self.padding-top;
			padding-left: 5px;
			padding-right: self.padding-left;

			VerticalLayout {
				HorizontalLayout {
					spacing: 5px;
					VerticalLayout {
						alignment: space-around;
						Image {
							source: root.icon;
							width: root.size;
							height: self.width;
							image-fit: cover;
						}
					}
					Text {
						text: root.temperature + " Â°C";
						color: #FFF;
						font-size: root.size;
						font-weight: 500;

						horizontal-alignment: center;
						vertical-alignment: center;
					}
				}
				if root.time != "" : HorizontalLayout {
					alignment: space-between;
					spacing: 5px;
					padding-left: 5px;
					Text {
						text: root.precipitation-propability + " %";
						color: #FFF;
						font-size: root.size * 0.4;
						font-weight: 300;
					}
					Text {
						text: root.time;
						color: #FFF;
						font-size: root.size * 0.4;
						font-weight: 300;
					}
				}
			}
		}
	}
}


export component App inherits Window {
	in property <string> date: "Present day...";
	in property <string> time: "and time.";
	in property <int> seconds: 27;

	in property <string> status: "Initializing...";
	in property <bool> status-error: false;
	in property <[{ message: string, error: bool }]> status-log: [{message: "Initializing..."}];

	in property <image> bg-image;
	in property <string> bg-date;
	in property <string> bg-time;
	in property <string> bg-text: "Loading...";

	in property <string> wtr-time;
	in property <image> wtr-icon;
	in property <int> wtr-temperature;

	in property <string> wtr-forecast-time;
	in property <image> wtr-forecast-icon;
	in property <int> wtr-forecast-temperature;
	in property <int> wtr-forecast-precipitation-propability;

	title: "CamView";
	background: #222;
	default-font-family: "Noto Sans";
	default-font-size: 26pt;

	Flickable {
		height: 100%;
		width: 100%;

		Image {
			source: root.bg-image;
			image-fit: cover;
			height: 100%;
			width: 100%;
		}
		// Background
		Text {
			text: root.bg-text;
			font-size: 102pt;
			color: #FFFFFF33;
			x: (root.width - self.width) * 50%;
			y: (root.height - self.height) * 50%;
			z: -1;
		}

		VerticalLayout {
			alignment: space-between;

			// Top
			HorizontalLayout {
				alignment: space-between;

				// Left side
				VerticalLayout { }

				// Right side: weather
				if root.wtr-time != "" : VerticalLayout {
					alignment: start;

					HorizontalLayout {
						alignment: end;
						max-width: root.width * 50%;

						// Forecast
						WeatherPanel {
							time: root.wtr-forecast-time;
							icon: root.wtr-forecast-icon;
							temperature: root.wtr-forecast-temperature;
							precipitation-propability: root.wtr-forecast-precipitation-propability;

							size: 32px;
							background: #00000099;
						}
						// Current weather
						WeatherPanel {
							icon: root.wtr-icon;
							temperature: root.wtr-temperature;

							size: 56px;
						}
					}
				}
			}

			// Bottom
			HorizontalLayout {
				alignment: space-between;
				spacing: 10px;

				// Left side
				VerticalLayout {
					alignment: end;

					// Status panel
					HorizontalLayout {
						alignment: start;
						Rectangle {
							background: #000000AA;
							HorizontalLayout {
								padding-left: 5px;
								padding-right: 5px;
								max-width: root.width * 50%;

								if root.status != "" : Text {
									text: root.status;
									color: root.status-error ? #FA5 : #AAA;
									font-size: 12pt;
									font-weight: 500;
								}
							}
						}
					}

					// Date
					if root.date != "" : HorizontalLayout {
						alignment: start;
						Rectangle {
							background: #000000AA;
							HorizontalLayout {
								padding-left: 10px;
								padding-right: 10px;
								Text {
									text: root.date;
									color: #FFF;
									font-size: 30pt;
									font-weight: 700;
								}
							}
						}
					}
				}

				// Right side
				VerticalLayout {
					alignment: end;

					// Image timestamp
					if root.bg-time != "" : HorizontalLayout {
						alignment: end;
						Rectangle {
							background: #000000AA;
							HorizontalLayout {
								padding-left: 5px;
								padding-right: 5px;
								Text {
									text: root.bg-time;
									color: #AAA;
									font-size: 16pt;
									font-weight: 500;
									horizontal-alignment: right;
								}
							}
						}
					}
					if root.bg-date != "" : HorizontalLayout {
						alignment: end;
						Rectangle {
							background: #000000AA;
							HorizontalLayout {
								padding-left: 5px;
								padding-right: 5px;
								Text {
									text: root.bg-date;
									color: #AAA;
									font-size: 12pt;
									font-weight: 500;
									horizontal-alignment: right;
								}
							}
						}
					}
					// Time
					if root.time != "" : HorizontalLayout {
						alignment: end;
						Rectangle {
							background: #000000AA;
							HorizontalLayout {
								alignment: end;
								spacing: 5px;
								padding-left: 10px;
								padding-right: 10px;
								anchor := Text {
									text: root.time;
									color: #FFF;
									font-size: 30pt;
									font-weight: 700;
								}
								Rectangle {
									width: 5px;
									background: #555;
									height: anchor.font-size * 73%;
									y: parent.height - self.height * 140%;
									Rectangle {
										height: parent.height * root.seconds / 60;
										y: parent.height - self.height;
										background: #bbb;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
